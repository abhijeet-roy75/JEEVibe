    },
    {
      "comment": "Question lookup by identifiers",
      "collectionGroup": "questions",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "subject", "order": "ASCENDING" },
        { "fieldPath": "chapter", "order": "ASCENDING" },
        { "fieldPath": "question_id", "order": "ASCENDING" }
