rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ========================================
    // SECURITY POLICY: NO CLIENT ACCESS
    // ========================================
    // All database operations must go through the backend API.
    // The backend uses Firebase Admin SDK which bypasses these rules.
    // This ensures all data access is controlled and validated server-side.
    
    // ========================================
    // DENY ALL CLIENT ACCESS
    // ========================================
    // Frontend mobile app cannot connect directly to Firestore.
    // All operations must go through backend API endpoints.
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
